@model YourAccountViewModel
@{
    ViewData["Title"] = "Your Account";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<p>These are the books you have a checked out.</p>
<div>
    @foreach (var checkout in Model.Checkouts)
    {
        <ul class="list-group">
            <li class="list-group-item">Title: <span>@checkout.Title</span></li>
            <li class="list-group-item">Due: @checkout.ReadableDueDate</li>
        </ul>
    }
</div>
